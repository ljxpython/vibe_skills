{
    "$schema": "https://opencode.ai/config.json",
    "plugin": [
        "oh-my-opencode",
        "opencode-openai-codex-auth"
    ],
    "mcp": {
        "augment-context-engine": {
            "type": "local",
            "command": [
                "auggie",
                "--mcp"
            ],
            "enabled": true,
            "environment": {}
        }
    },
    "model": "zhipuai-coding-plan/glm-4.6",
    "small_model": "zhipuai-coding-plan/glm-4.5-air",
    "provider": {
        "openai": {
            "name": "OpenAI",
            "options": {
                "reasoningEffort": "medium",
                "reasoningSummary": "auto",
                "textVerbosity": "medium",
                "include": [
                    "reasoning.encrypted_content"
                ]
            },
            "models": {
                "gpt-5.2": {
                    "name": "GPT 5.2 (OAuth)",
                    "modalities": {
                        "input": [
                            "text",
                            "image"
                        ],
                        "output": [
                            "text"
                        ]
                    }
                }
            }
        },
        "codex-proxy": {
            "npm": "@ai-sdk/openai",
            "name": "Codex Proxy (中转)",
            "options": {
                "baseURL": "http://api.mirrorcodex.xyz:3000/openai/v1",
                "apiKey": "YOUR_CODEX_PROXY_API_KEY",
                "setCacheKey": true
            },
            "models": {
                "gpt-5.2-low": {
                    "id": "gpt-5.2",
                    "name": "GPT 5.2 Low (中转)",
                    "options": {
                        "reasoningEffort": "low",
                        "textVerbosity": "low",
                        "reasoningSummary": "auto"
                    }
                },
                "gpt-5.2-medium": {
                    "id": "gpt-5.2",
                    "name": "GPT 5.2 Medium (中转)",
                    "options": {
                        "reasoningEffort": "medium",
                        "textVerbosity": "low",
                        "reasoningSummary": "auto"
                    }
                },
                "gpt-5.2-high": {
                    "id": "gpt-5.2",
                    "name": "GPT 5.2 High (中转)",
                    "options": {
                        "reasoningEffort": "high",
                        "textVerbosity": "low",
                        "reasoningSummary": "auto"
                    }
                },
                "gpt-5.2-xhigh": {
                    "id": "gpt-5.2",
                    "name": "GPT 5.2 xHigh (中转)",
                    "options": {
                        "reasoningEffort": "xhigh",
                        "textVerbosity": "low",
                        "reasoningSummary": "detailed"
                    }
                },
                "gpt-5.2-codex-high": {
                    "id": "gpt-5.2",
                    "name": "GPT 5.2 Codex High (中转)",
                    "options": {
                        "reasoningEffort": "high",
                        "textVerbosity": "low",
                        "reasoningSummary": "auto",
                        "store": false
                    }
                },
                "gpt-5.2-codex-xhigh": {
                    "id": "gpt-5.2",
                    "name": "GPT 5.2 Codex xHigh (中转)",
                    "options": {
                        "reasoningEffort": "xhigh",
                        "textVerbosity": "low",
                        "reasoningSummary": "detailed",
                        "store": false
                    }
                }
            }
        },
        "zhipuai-coding-plan": {
            "options": {
                "apiKey": "YOUR_ZHIPUAI_API_KEY"
            }
        }
    }
}
